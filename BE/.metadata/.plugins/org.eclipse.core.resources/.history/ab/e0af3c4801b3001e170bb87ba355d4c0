package br.com.lhp.dao;

import java.sql.Connection;
import java.sql.SQLException;
import java.util.ArrayList;

import org.junit.Assert;
import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import br.com.lhp.model.Time;

class TimeDaoTest {
	private Connection conn;
	
	@BeforeEach
	void setUp() throws Exception {
		this.conn =  new Factory().recuperarConexao();
		conn.setAutoCommit(false);
	}
	
	@AfterEach 
	public void afterEach() throws SQLException{
		conn.close();
	}

	@Test
	void testBuscarTime() {
		Time time = new Time("São Paulo", "Brasileirão", "Brasil");
		new TimeDao(conn).armazenar(time);
		Assert.assertNotNull(new TimeDao(conn).buscar("são paulo"));
	}
	
	@Test
	void testListaTimes() {
//		String[] listTeste;
		ArrayList<String> listTeste = new ArrayList<String>();
		new TimeDao(conn)
				.listar()
				.stream().
				forEach((k) -> {
					if(k.getNome().contains("são paulo")) {
						listTeste.add(k.getNome() +", " +k.getLiga() + ", " +k.getPais());
					};
					});
		
		Assert.assertEquals("são paulo, brasileirão serie a, brasil", listTeste.get(0));
	}
	
	@Test
	void test() {
		
	}

}
