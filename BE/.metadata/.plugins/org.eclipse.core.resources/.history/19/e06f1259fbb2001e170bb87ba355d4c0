package br.com.lhp.dao;

import java.sql.Connection;
import java.sql.SQLException;

import org.junit.Assert;
import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import br.com.lhp.model.Time;

class TimeDaoTest {
	private Connection conn;
	
	@BeforeEach
	void setUp() throws Exception {
		this.conn =  new Factory().recuperarConexao();
		conn.setAutoCommit(false);
	}
	
	@AfterEach 
	public void afterEach() throws SQLException{
		conn.close();
	}

	@Test
	void test() {
		Time time = new Time("São Paulo", "Brasileirão", "Brasil");
		new TimeDao(conn).armazenar(time);
		Assert.assertNotNull(new TimeDao(conn).buscar("são paulo"));
	}
	
	@Test
	void ListaTimes() {
//		String[] listTeste;
		ArrayList<Integer, String> listTeste = new ArrayList<Integer, String>();
		String teste = new TimeDao(conn)
				.listar()
				.stream().
				forEach((k) -> {listTeste = k});
		
//		new TimeDao(conn).listar().stream().forEach(System.out::println);
		Assert.assertEquals("Time{Nome: sao paulo, pais, liga}", teste);
	}

}
